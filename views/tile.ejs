<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Kermit - <%= tile.title %></title>

    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <link rel='stylesheet' type='text/css' href='/styles/layout.css'>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <title>Midterm</title>
    <%- include('partials/_search') %>
  </head>


    <body class='container'>
      <div class='col-xs-2 col-md-4 col-lg-6'>
        <div class='box'>
      <img src="<%= tile.thumbnail_photo_url %>">
      <h2><%= (tile.title) %></h2>
      <p><%= (tile.description) %></p>
      <li><%= (tile.url) %></li>
        <li class="list-group-item">Rating: <%= ratings[0].round %> / 5</li>

      </ul>
      <div>
        <form action="/likes" method="POST">
          <input type=id value=1 name=tile_id hidden>
          <input type=id value="<%= tile.id %>" name=tile_id hidden>
         <button type='submit' id='likes' class='button'>LIKE!</button><a href="https://<%= tile.url %>" class="card-link">Link to Site</a>
      </div>
          </div>
        </form>
      </div>

      <div>
        <form action="/ratings" method="POST">
        <div class="rate">
          <input type="radio" id="star5" name="rate" value="5" />
          <label for="star5" title="text">5 stars</label>
          <input type="radio" id="star4" name="rate" value="4" />
          <label for="star4" title="text">4 stars</label>
          <input type="radio" id="star3" name="rate" value="3" />
          <label for="star3" title="text">3 stars</label>
          <input type="radio" id="star2" name="rate" value="2" />
          <label for="star2" title="text">2 stars</label>
          <input type="radio" id="star1" name="rate" value="1" />
          <label for="star1" title="text">1 star</label>
          <input type=id value="<%= tile.id %>" name=tile_id hidden>
          <button type="submit" id="submit">Rate Me!</button>
        </form>
        </div>
        <section class="commentcontainer">

        <form action="/comment" method="POST">
          <div class="comment">
            <textarea name="text" id="comment-text" placeholder='Go Ahead, Comment Here!'></textarea>
            <input type=id value="<%= tile.id %>" name=tile_id hidden>
          </div>
          <div class="commentfooter">
            <button id="submit" type="submit">Comment</button>
          </div>
        </form>
      </section>

        <section id="comments-container" class="commentsection">

      <% for(let comment in comments) { %>
      <div class="indcomment">
        <h5 class="card-comment1">   User: <%= (comments[comment].name) %></h5>
        <p class="card-comment2">   <%= (comments[comment].comment) %></p>
      </div>
      <% } %>
    </section>
    </div>

  </body>
</html>
